<div class="row">
  <% @items.each do |item| %>
    <% if current_admin %>
      <a href="<%= admin_item_path(item) %>", id="item-link-wrap">
    <% else %>
      <a href="<%= item_path(item) %>", id="item-link-wrap">
    <% end %>
      <div class="col-sm-6 col-md-3 text-center item-card">
        <div class="thumbnail">
          <img src="<%= item.image %>" alt="" class="scoots">
          <div class="caption">
            <h3><%= item.title %></h3>
            <p><%= item.description %></p>
            <p><%= item.price %></p>
    </a>
            <%= button_to "Add to Cart", carts_path(item_id: item.id), class: "btn btn-primary", id: "item-#{item.id}" %>
            <% if current_admin %>
            <%= link_to "Edit", edit_admin_item_path(item) %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>
