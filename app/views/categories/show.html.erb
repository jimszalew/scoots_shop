  <% if @category.present? %>
  <h2><%= @category.name if @category.present? %></h2>

  <div class="row">
    <% @category.items.each do |item| %>
      <div class="col-sm-6 col-md-3 text-center item-card">
        <div class="thumbnail">
          <img src="<%= item.image %>" alt="" class="scoots">
          <div class="caption">
            <h3><%= item.title %></h3>
            <p><%= item.description %></p>
            <p><%= item.price %></p>
            <%= button_to "Add to Cart", carts_path(item_id: item.id), class: "btn btn-primary", id: "item-#{item.id}" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
