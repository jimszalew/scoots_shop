<div class="row">
<% @order.order_items.each do |order_item| %>
<%# require 'pry'; binding.pry %>
  <% item = order_item.item %>
  <div class="row cart-item">
    <div class="col-md-3">
      <%= image_tag(item.image, class: "img-thumbnail") %>
    </div>
    <div class="col-md-2">
      <%= link_to item.title, item_path(item) %>
    </div>
    <div class="col-md-2">
      Price: <%= item.price %>
    </div>
    <div class="col-md-2">
      Quantity: <%= order_item.item_quantity %>
    </div>
    <div class="col-md-2">
      Subtotal: <%= order_item.line_item_total %>
    </div>
  </div>
  <% end %>
</div>

<h3>Order Information: </h3>

<div class="row">
  <div class="col-md-3">
    Order Status: <%= @order.status.capitalize %>
  </div>
  <div class="col-md-3">
    Total Price: <%= @order.total_price %>
  </div>
  <div class="col-md-4">
    <% if @order.completed? %>
      Order Completed: <%= @order.resolved_at %>
    <% elsif @order.cancelled?%>
      Order Cancelled: <%= @order.resolved_at %>
    <% end %>
  </div>
</div>
